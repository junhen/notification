<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xx.json.parser.JsonParserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/json_action_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="person"/>
            <Button
                android:id="@+id/json_action_persons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="persons" />
            <Button
                android:id="@+id/json_action_strings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="strings" />

            <Button
                android:id="@+id/json_action_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maps" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/json_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="json_create"/>

            <Button
                android:id="@+id/json_parser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="json_parser" />
            <Button
                android:id="@+id/json_parser_direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="json_parser_direct" />

        </LinearLayout>
        <TextView
            android:id="@+id/json_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88880000"
            android:text="json_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88008800"
            android:text="json create:"/>
        <TextView
            android:id="@+id/json_create_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88008800"
            android:text="json parser:"/>
        <TextView
            android:id="@+id/json_parser_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
